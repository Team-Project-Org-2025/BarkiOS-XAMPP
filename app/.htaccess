# .htaccess (En la raíz de tu proyecto, ej: /BarkiOS/.htaccess)

<IfModule mod_rewrite.c>
    RewriteEngine On
    
    # Define la base de la URL para las reglas
    RewriteBase /BarkiOS/ 

    # Si la petición NO es un archivo existente
    RewriteCond %{REQUEST_FILENAME} !-f

    # Y si la petición NO es un directorio existente
    RewriteCond %{REQUEST_FILENAME} !-d

    # Entonces redirige toda la solicitud a index.php
    RewriteRule ^(.*)$ index.php [QSA,L]
</IfModule>